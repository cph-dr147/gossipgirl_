<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.gossipgirl_.SignupController"
            prefWidth="600"
            prefHeight="400"
            style="-fx-background-color: rgb(210,101,219);">

    <VBox spacing="10"
          layoutX="50"
          layoutY="50">

        <Button fx:id="backButton"
                text="Back"
                onAction="#onBackButtonClick"/>

        <Label fx:id="signupText"
               text="Signup"
               style="-fx-font-size: 20px;"/>

        <TextField fx:id="emailField"
                   promptText="Email"/>

        <TextField fx:id="usernameField"
                   promptText="Username"/>

        <TextField fx:id="passwordField"
                   promptText="Password"/>

        <Button text="Sign Up ðŸ’‹"
                onAction="#onSignupButtonClick"/>

    </VBox>
</AnchorPane>
